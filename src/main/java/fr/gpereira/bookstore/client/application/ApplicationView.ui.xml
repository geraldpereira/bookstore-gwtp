	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:npui="urn:import:fr.gpereira.bookstore.client.application.ui">
	
	<g:HTMLPanel>
		<npui:MainMenu />
		<div ui:field="loadingDiv">
			<b:FluidContainer>
            	<b:ProgressBar type="ANIMATED" percent="100" />
            </b:FluidContainer>
